extends ../layout/layout

block head-title
  title Update Image - #{appName}

block content

  script.
    $(function() {
      imagel.initUpdate(!{JSON.stringify(image)});
    });

  .section.page-title
    h1 Update Image

  .section
    form.main
      .sub-section
        .form-group
          label.control-label Image
          .panel.panel-default
            .panel-body
              input(type='file', name='files', accept='image/*', multiple='multiple')
          if appNamel == 'drypot'
            p.help-block
              | Only SVG files.
      .sub-section
        .form-group
          label.control-label Comment
          textarea.form-control(name='comment', rows=7) #{image.comment}
      .sub-section
        button.btn.btn-primary(name='send', data-loading-text='Sending') Update

  include image-new-notice.jade