extends ../layout/layout

block head-title
  title #{tuser.name} - #{appName}

block content
  script.
    $(function () {
      cuser.initProfile();
      cimage.initList();
    });

  .section.page-title
    h1
      //- user.home 에 '/' 문자 있는 경우도 있으므로 미리 URI 인코딩한다.
      a(href='/' + encodeURIComponent(tuser.home)) #{tuser.name}

  .section
    if !gt
      #profile-text.sub-section
        | #{tuser.profile}

      if updatable
        .section.top-links
          a(href='/users/' + tuser._id + '/update') Update Profile

      if tuser.status == 'd'
        .section
          | Deactivated Account

  if images.length
    //-
      if gt
      .section.pager-prev
        a(href=gt) Previous

    .section.image-thumb-list
      for image in images
        .image-thumb
          .image
            a(href='/images/' + image._id)
              img(src=image.thumb, data-vers= image.vers ? image.vers.join(','): null)
          if image.comment
            .comment= image.comment

    if lt
      .section.pager-next
        a(href=lt) Next
