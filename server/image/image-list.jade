extends ../layout/layout

block head-title
  title #{appName}

block site-title

block content

  script.
    $(function() {
      imagel.initList();
    });

  .section.page-title
    h1
      a(href='/') #{appName}

  if !gt
    if locals.user
      .section.top-links
        a(href='/images/new') Upload
        a(href='/users/' + user._id) Profile
        a(href='/users') Users
        a(href='#' onclick='javascript:userl.logout(); return false;') Logout
    else
      .section.top-links
        a(href='/users/login') Login
        a(href='/users/register') Register

    .section.news
      for banner in banners
        a(href=banner.url, target="_blank") #{banner.text}
        br

  if gt
    .section.pager-prev
      a(href=gt) Previous

  
  for image in images
    .section.image-thumb
      .image
        a(href='/images/' + image._id)
          img(src=image.thumb)
      - var c = image.comment.split('\r\n', 1)[0]
      if c
        .comment= c
      .uname
        a(href='/' + image.user.home) #{image.user.name}

  if lt
    .section.pager-next
      a(href=lt) Next
