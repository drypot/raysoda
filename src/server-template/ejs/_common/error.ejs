<!DOCTYPE html>
<html lang="ko">
<head>
    <% app.title = 'Error' %>
    <%- include('../_layout/head') %>
</head>
<body>
    <%- include('../_layout/header') %>

    <div class="section page-title">
        <h1>Error</h1>
    </div>

    <% const err = app.err[0] %>
    <% function def(s) {
        return s ? s : '...'
    } %>
    <% if (err) { %>
        <div class="section error-report">
            Name: <%- def(app.err[0].name) + '\n' %>
            Message: <%- def(app.err[0].message) + '\n' %>
            Field: <%- def(app.err[0].field) %>
        </div>
    <% } else { %>
        <div class="section error-report">
            Error is not defined.
        </div>
    <% } %>

    <%- include('../_layout/footer') %>
</body>
</html>
