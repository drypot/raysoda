{
  // https://github.com/tsconfig/bases/tree/main/bases
  "extends": "@tsconfig/node16/tsconfig.json",

  "compilerOptions": {
    "outDir": "../../build/server",
    "rootDir": ".",
    "sourceMap": true,

    // ObjectMaker 자동 등록을 위해 preserve 로 해야한다.
    "importsNotUsedAsValues": "preserve"
