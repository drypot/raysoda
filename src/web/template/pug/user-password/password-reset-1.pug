extends ../layout/layout

block head-opt
  title Password Reset - #{config.appName}

block content

  .section.page-title
    h1 비밀번호 초기화

  if !query.step
    script.
      $(function () {
        cuser.initResetPassStep1();
      });

    .section
      form.main
        .sub-section
          .form-group
            label.control-label 이메일
            input.form-control(name='email', type='text')
        .sub-section
          button.btn.btn-primary(name='send', data-loading-text='전송중') 비밀번호 초기화
