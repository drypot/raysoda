extends ../layout/layout

block head-opt
  title Register - #{config.appName}

block content
  script.
    $(function () {
      cuser.initRegister();
    });

  .section.page-title
    //-h1 Register
    h1 회원 가입

  .section
    form.main
      .sub-section
        .form-group
          label.control-label 이름
          input.form-control(name='name', type='text', maxlength=32)
        .form-group
          label.control-label 이메일
          input.form-control(name='email', type='text', maxlength=64)
        .form-group
          label.control-label 비밀번호
          input.form-control(name='password', type='password', maxlength=64)
      .sub-section
        button.btn.btn-primary(name='send', data-loading-text='전송중') 등록
