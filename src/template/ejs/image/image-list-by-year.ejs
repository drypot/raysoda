<!DOCTYPE html>
<html lang="ko">
<head>
    <% locals.title = 'Years' %>
    <%- include('../_common/head') %>
</head>
<body>
    <%- include('../_common/header') %>

    <div class="wrapper">
        <h1>연도별</h1>

        <% const today = new Date() %>
        <% let sy = today.getFullYear() %>
        <% let ey = locals.firstCdate.getFullYear() %>
        <% let iy = sy %>

        <% while (iy >= ey) { %>
            <h3><%- iy %></h3>
            <div class="mt-3 flex content-center space-x-4 fs-lg">
                <% let sm = iy == sy ? today.getMonth() : 11 %>
                <% let em = iy == ey ? locals.firstCdate.getMonth() : 0 %>
                <% let im = sm %>
                <% while (im >= em) { %>
                    <% let link = '/image-list?d=' + iy + '-' + (im < 9 ? '0' : '') + (im + 1) %>
                    <a href="<%- link %>"><%- im + 1 %></a>
                    <% im-- %>
                <% } %>
                <% iy-- %>
            </div>
        <% } %>
    </div>

    <%- include('../_common/footer') %>
</body>
</html>
