<!DOCTYPE html>
<html lang="ko">
<head>
    <% locals.title = 'Change Password' %>
    <%- include('../_common/head') %>
</head>
<body>
    <%- include('../_common/header') %>

    <div class="wrapper">
        <h1>상태 수정</h1>
        <form id="form" class="max-w-4xs">
            <label class="inline-flex items-center">
                <input type="radio" name="status" value="v">
                <span class="fix-baseline">Valid</span>
            </label>
            <label class="inline-flex items-center mt-0">
                <input type="radio" name="status" value="d">
                <span class="fix-baseline">Deactivated</span>
            </label>
            <div class="error-group"></div>
            <div class="btn-group">
                <button class="btn-blue" name="send">수정</button>
            </div>
        </form>
    </div>

    <%- include('../_common/footer') %>
    <script type="application/json" id="formJson">
        <%= JSON.stringify(locals.form) %>
    </script>
    <script>
        page.initUserUpdateStatus();
    </script>
</body>
</html>
