#!/usr/bin/env bash

function show_usage {
    echo "run [raysoda|rapixel|osoky|drypot] [dev|live]"
    exit 1
}

if [ $# -lt 2 ]; then
    show_usage
fi

if [ "$2" = dev ]; then
    CONFIG_DIR=config
    export NODE_ENV=development
elif [ "$2" = live ]; then
    CONFIG_DIR=config-live
    export NODE_ENV=production
else
    show_usage
fi

set -o xtrace
node dist/src/script/run-server.js ${CONFIG_DIR}/${1}-${2}.json
