#!/usr/bin/env bash

# 맥에서 postfix 기동과 종료
# $ sudo postfix start
# $ sudo postfix stop

function show_usage {
    echo "usage: bin/send-test-mail config/mail-dev.json drypot@mail.test"
    exit 1
}

if [ $# -lt 2 ]; then
    show_usage
fi

npx ts-node src/server/script/send-test-mail-script.ts "$@"
