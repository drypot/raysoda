for arg in ${@-app}; do
  if [ -f $arg ]; then
    echo mocha --timeout 15000 --exit $arg
    mocha --timeout 15000 --exit $arg
  else
    for path in $(find ${arg} -name "*-test.js"); do
      echo mocha --timeout 15000 --exit $path
      mocha --timeout 15000 --exit $path
      if [ $? -ne 0 ]; then break; fi
    done
  fi
done
