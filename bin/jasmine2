#!/usr/bin/env bash

jasmine="node src/script/jasmine-runner.mjs"

for arg in "${@-build}"; do
  if [ -f $arg ]; then
    echo $jasmine $arg
    $jasmine $arg
  else
    for path in $(find ${arg} -name "*-test.js"); do
      echo $jasmine $path
      $jasmine $path
      if [ $? -ne 0 ]; then break; fi
    done
  fi
done
