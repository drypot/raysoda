#!/usr/bin/env bash

function show_usage {
    echo "bin/raysoda-live [raysoda|rapixel|osoky|drypot|sobeaut]"
    exit 1
}

if [ $# -lt 1 ]; then
    show_usage
fi

export NODE_ENV=production

#export NODE_OPTIONS='-r ts-node/register -r tsconfig-paths/register'
#export TS_NODE_PROJECT=src/tsconfig.json

set -x # enable debugging output

node src/script/run-raysoda.ts config-live/${1}-live.json
