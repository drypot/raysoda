extends ../layout/layout

block head-opt
  title Users - #{appName}

block content

  script.
    $(function() {
      cuser.initUserList();
    });

  .section.page-title
    h1 회원별

  .section
    .sub-section
      form.main.form-inline
        .form-group
          input.form-control(name='q', type='text')
        .form-group
          button.btn.btn-primary(type='submit') 회원 검색

      .sub-section
        .user-list
          if users.length
            for user in users
              div: a(href='/' + encodeURIComponent(user.home)) #{user.name}
          else
            div 검색 결과가 없습니다.

      .sub-section
        .prev-next
          if prev
            a(href=prev)
              i.fa.fa-angle-left(aria-hidden='true')
          if next
            a(href=next)
              i.fa.fa-angle-right(aria-hidden='true')

