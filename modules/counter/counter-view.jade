<%@ Control Language="c#" AutoEventWireup="false" Codebehind="View.ascx.cs" Inherits="WebSite.Com.DailyCount.View" TargetSchema="http://schemas.microsoft.com/intellisense/ie5" %>
<%@ Register TagPrefix="bah" NameSpace="Bah.Web.Controls" Assembly="Bah"%>

<style>
table.count-list td {
  padding: 3 3 1 3;
  font: 12px/16px 굴림;
}
</style>

<table cellpadding="0" cellspacing="0" border="1" class="count-list">
<bah:SqlDataRepeater Runat=server id=ItemRep EnableViewState="false">
  <ItemTemplate>
    <tr>
      <td width="100">
        <%#
          Container["Create"].ToString().Substring(0,4) + "." + 
          Container["Create"].ToString().Substring(4,2) + "." + 
          Container["Create"].ToString().Substring(6,2)
        %>
      </td>
      <td width=60 align=right>
        <%#Container["Count"]%>
      </td>
    </tr>
  </ItemTemplate>
</bah:SqlDataRepeater>
</table>
